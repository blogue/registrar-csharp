<html>
  <head>
    <meta charset="utf-8">
    <title></title>
  </head>
  <body>
    <h1>Courses</h1>

    <ul>
      @foreach(var course in Model)
      {
        <a href="/courses/@course.GetId()"><li>@course.GetName()</li></a>
      }
